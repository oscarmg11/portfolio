{
  "compilerOptions": {
    "target": "es5",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */

    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "baseUrl": "./"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
}
